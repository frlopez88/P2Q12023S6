<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimerosPasos.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2B3467" Padding="24" CornerRadius="0"   >
            <Label Text="Mi Primer Proyecto Movíl" HorizontalTextAlignment="Center" TextColor="#BAD7E9" FontSize="36"/>
        </Frame>

        <Image Source="https://upload.wikimedia.org/wikipedia/commons/8/8d/CEUTEC_HONDURAS.png"
               Aspect="AspectFit"
               HorizontalOptions="Center" />

        <Label Text="Hola bievenido a mi aplicación, quisiera saludarte, me regalas tu nombre?" FontSize="20" >   </Label>

        <Entry x:Name="txtNombre" Keyboard="Text"
               Placeholder="Escriba su nombre"
               VerticalOptions="CenterAndExpand" />

        <Button Text="Dar Clic"
                Font="Large"
                BorderWidth="1"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="saludar"
                 />

        <Label x:Name="lblResultado" FontSize="20" ></Label>

    </StackLayout>

</ContentPage>
